{
  "name": "solar-magic",
  "version": "1.0.0",
  "description": "A collection of tools for SMW Hackers.",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "watch": "cd solar-magic && ng build --watch",
    "build": "node scripts/build.js",
    "clean": "rm -rf node_modules && rm package-lock.json && cd solar-magic && rm -rf node_modules && rm package-lock.json",
    "install": "cd solar-magic && npm i",
    "deploy": "electron-packager . --out dist --overwrite"
  },
  "author": "bucketofwetsocks",
  "license": "ISC",
  "devDependencies": {
    "electron": "^13.1.2",
    "electron-packager": "^15.2.0"
  },
  "dependencies": {
    "@smwcentral/spc-player": "^1.1.2",
    "adm-zip": "^0.5.5",
    "decode-html": "^2.0.0",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "materialize-css": "^1.0.0-rc.2",
    "node-html-parser": "^3.3.6"
  }
}
